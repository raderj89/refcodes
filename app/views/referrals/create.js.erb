<% if @referral.valid? %>
  $("#referral-deals").prepend("<%= escape_javascript(render @referral ) %>");
  $(".js-ref-form").html("<%= escape_javascript(render 'form', referral: @new_referral) %>");
<% else %>
  $(".js-ref-form").html("<%= escape_javascript(render 'form', referral: @referral) %>");
<% end %>

$(".ref-<%= @referral.id %>-claim-count").html('<%= pluralize(@referral.claims.count, 'claim') %>');
$("#notice").html("<%= escape_javascript(render 'shared/flash' , flash: flash).html_safe %>");