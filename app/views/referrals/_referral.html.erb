<div class="row">
  <div class="col-md-6">
      <h3><%= referral.company.name %></h3>
      <h4><%= referral.details %></h4>
      <small>
        Link: <%= referral.link %>
        <br>
        <% unless referral.code.nil? || referral.code.empty? %>
        Code: <%= referral.code %>
        <br>
        <% end %>
        <% unless referral.expiration.nil? %>
        Expires: <%= referral.expiration %>
        <br>
        <% end %>
        <% unless referral.limit.nil? %>
        Limit: <%= referral.limit %>
        <br>
        <% end %>
      </small>
  </div>
  <div class="col-md-6 social-share">
    <div class="buttons">
      <a href="https://twitter.com/share" class="twitter-share-button" data-text='<%= "Get \"#{referral.details}\" from #{referral.link}" %>' data-via="refcodes">Tweet</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
      <div class="fb-share-button fb-share" data-href="<%= referral.link %>" data-type="button_count"></div>
    </div>
  </div>
</div>
<hr>