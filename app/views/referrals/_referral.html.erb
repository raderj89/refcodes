<div class="referral">
  <h2><%= referral.company.name %></h2>
  <h3 class="referral-details"><%= referral.details %></h3>
  <div class="details">
    Link: <%= referral.link %>
    <br>
    <% unless referral.code.nil? || referral.code.empty? %>
    Code: <%= referral.code %>
    <br>
    <% end %>
    <% unless referral.expiration.nil? %>
    Expires: <%= referral.expiration %>
    <br>
    <% end %>
    <% unless referral.limit.nil? %>
    Limit: <%= referral.limit %>
    <br>
    <% end %>
    <div class="ref-<%= referral.id %>-claim-count">
      <%= pluralize(referral.claims.count, 'claim') %> 
    </div>
  </div>

  <div class="button-group">
    <div class="three-buttons">
      <button class="fb-share-button" data-href="<%= referral.link %>">
        <%= image_tag('facebook.svg') %>
        <div class="btn-text">
          Share
        </div>
      </button>

      <button class="twitter-share-button">
        <a href="https://twitter.com/intent/tweet?url=<%= referral.link %>&text=Get%20<%= referral.details %>%20via%20Refcodes">
          <%= image_tag('twitter.svg') %>
          <div class="btn-text">Share</div>
        </a>
      </button>

      <%= render partial: 'claims/claimer', locals: { referral: referral } %>
      
    </div>
  </div>
</div>